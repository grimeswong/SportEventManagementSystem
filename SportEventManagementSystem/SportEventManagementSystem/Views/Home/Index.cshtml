@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.jpg" alt="Rowing" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Rowing Competitions
                    <a class="btn btn-info" asp-controller="Event" asp-action="Index">
                        See More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.jpg" alt="Swimming" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Swimming Competitions
                    <a class="btn btn-danger" asp-controller="Event" asp-action="Index">
                        See More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.jpg" alt="Track and Field" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   Track and Field Events
                    <a class="btn btn-primary" asp-controller="Event" asp-action="Index">
                        See More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner4.jpg" alt="Rugby" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Rugby Events
                    <a class="btn btn-success" asp-controller="Event" asp-action="Index">
                        See More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <h1 class="text-center" style="height:300px; padding:10px; padding-top:70px;">Welcome to <img src="~/images/Rowdrite logo.png"/> Sport Event Management System</h1>
</div>
