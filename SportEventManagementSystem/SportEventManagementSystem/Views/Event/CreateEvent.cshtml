@model SportEventManagementSystem.Models.EventViewModels.CreateEventViewModel

@{
    ViewData["Title"] = "CreateEvent";
}

<div class="row maincontent">
    <form asp-action="CreateEvent">
        <p><h2>1. Event Details</h2></p>
        <div class="row"> <!-- Event content row start -->
            <div class="col-md-8">
                <div class="row">
                    <div class="form-group col-md-6 col-sm-12">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Event Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <label asp-for="RegStartTime" class="control-label">Regristry Open</label>
                        <input asp-for="RegStartTime" class="form-control" placeholder="Date & time" />
                        <span asp-validation-for="RegStartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <label asp-for="RegEndTime" class="control-label">Registry Closed</label>
                        <input asp-for="RegEndTime" class="form-control" placeholder="Date & time" />
                        <span asp-validation-for="RegEndTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label class="control-label">Event Description</label>
                        <textarea class="event-description" asp-for="Description" name="eventdescription" rows="5" placeholder="Description of Event"></textarea>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <label asp-for="StartTime" class="control-label">Start Date</label>
                        <input asp-for="StartTime" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <label asp-for="StartTime" class="control-label">Start Time</label>
                        <input asp-for="StartTime" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <label asp-for="EndTime" class="control-label">End Date</label>
                        <input asp-for="EndTime" class="form-control" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <label asp-for="EndTime" class="control-label">End Time</label>
                        <input asp-for="EndTime" class="form-control" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="OrganiserName" class="control-label"></label>
                        <input asp-for="OrganiserName" class="form-control" />
                        <span asp-validation-for="OrganiserName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="EntryCapacity" class="control-label">Event Capacity</label>
                        <input asp-for="EntryCapacity" class="form-control" />
                        <span asp-validation-for="EntryCapacity" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="OrganiserClub" class="control-label"></label>
                        <input asp-for="OrganiserClub" class="form-control" />
                        <span asp-validation-for="OrganiserClub" class="text-danger"></span>
                    </div>
                </div>
            </div> <!-- end row col-md-8 -->
            <div class="col-md-4">
                <img class="create-img" src="~/images/banner1.jpg" alt="Image not available" />
                <p>Add a photo</p>
            </div>
        </div> <!-- End of Event Details part -->

        <p><h2>2. Event Location</h2></p>
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="VenueName" class="control-label"></label>
                        <input asp-for="VenueName" class="form-control" />
                        <span asp-validation-for="VenueName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="StreetAddress" class="control-label">Event Address</label>
                        <input asp-for="StreetAddress" class="form-control" />
                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Suburb" class="control-label"></label>
                        <input asp-for="Suburb" class="form-control" />
                        <span asp-validation-for="Suburb" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="PostCode" class="control-label"></label>
                        <input asp-for="PostCode" class="form-control" />
                        <span asp-validation-for="Suburb" class="text-danger"></span>
                    </div>

                </div>
            </div>

            <div class="col-md-4">
                <img class="create-img" src="~/images/banner2.jpg" alt="Image not available" />
                <p>Goolge Map</p>
            </div>
        </div>  <!-- end of event location part -->


        <div class="row">
            <div class="col=md-6">
                <div class="form-group">
                    <input type="submit" value="Confirm Create An Event" class="btn btn-primary" />
                </div>
            </div>
            <div class="col=md-6">
                <button asp-action="Index" class="btn btn-default">Cancel</button>
            </div>
        </div>

    </form>
</div> <!-- end row maincontent-->





