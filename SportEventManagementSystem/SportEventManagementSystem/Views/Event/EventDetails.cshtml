@model EventIndexViewModel

@{
    ViewData["Title"] = "EventDetails";
}

@*<div class="jumbotron">*@
<div class="panel panel-body">
    <h2>@Model.CreatedEvents[0].Name Details</h2>
    <div class="row">
        <div class="col-sm-4">
            <img src="~/images/banner1.jpg" class="img-thumbnail" alt="Can't render image" />
        </div>
        <div class="col-sm-4">
            <ul class="list-group event-list-title-font">
                <li class="list-group-item">Event Description</li>
                <li class="list-group-item">@Model.CreatedEvents[0].Description</li>
                <li class="list-group-item">Event Start Time</li>
                <li class="list-group-item">@Model.CreatedEvents[0].StartTime</li>
                <li class="list-group-item">Event End Time</li>
                <li class="list-group-item">@Model.CreatedEvents[0].EndTime</li>
                <li class="list-group-item">Registration Start Time</li>
                <li class="list-group-item">@Model.CreatedEvents[0].RegStartTime</li>
                <li class="list-group-item">Registration End Time</li>
                <li class="list-group-item">@Model.CreatedEvents[0].RegEndTime</li>
                <li class="list-group-item">Organiser Name</li>
                <li class="list-group-item">@Model.CreatedEvents[0].OrganiserName</li>
            </ul>
        </div>
        <div class="col-sm-4">
            <ul class="list-group event-list-title-font">
                <li class="list-group-item">Organiser Club</li>
                <li class="list-group-item">@Model.CreatedEvents[0].OrganiserClub</li>
                <li class="list-group-item">Event Venue Name</li>
                <li class="list-group-item">@Model.CreatedEvents[0].VenueName</li>
                <li class="list-group-item">Event Address</li>
                <li class="list-group-item">@Model.CreatedEvents[0].StreetAddress</li>
                <li class="list-group-item">Suburb</li>
                <li class="list-group-item">@Model.CreatedEvents[0].Suburb</li>
                <li class="list-group-item">Postcode</li>
                <li class="list-group-item">@Model.CreatedEvents[0].PostCode</li>
                <li class="list-group-item">Event Type</li>
                @if (@Model.CreatedEvents[0].IsPrivate == false)
                {
                    <li class="list-group-item">Public</li>
                }
                else
                {
                    <li class="list-group-item">Private</li>
                }
            </ul>
        </div>

    </div>

</div>


@if (Model.CreatedEvents[1].Competitions.Count > 0)
{
    @for (int j = 0; j < Model.CreatedEvents[1].Competitions.Count; j++)
    {
        <div class="panel panel-primary">
            <div class="panel-heading clearfix">
                @Model.CreatedEvents[1].Competitions[j].Name
                <a class="btn btn-success pull-right">Join Event</a>
            </div>
            <div class="panel-body">
                <div class="col-sm-4"><img src="~/images/banner1.jpg" class="img-thumbnail" alt="Can't render image" /></div>
                <div class="col-sm-4">
                    <ul class="list-group">
                        <li class="list-group-item">Competition Location</li>
                        <li class="list-group-item">@Model.CreatedEvents[1].Competitions[j].Location</li>
                        <li class="list-group-item">Start Time</li>
                        <li class="list-group-item">@Model.CreatedEvents[1].Competitions[j].StartTime</li>
                        <li class="list-group-item">End Time</li>
                        <li class="list-group-item">@Model.CreatedEvents[1].Competitions[j].EndTime</li>
                        <li class="list-group-item">Competition Sport Type</li>
                        <li class="list-group-item">@Model.CreatedEvents[1].Competitions[j].SportType.Name</li>
                        <li class="list-group-item">Competition Sport Description</li>
                        <li class="list-group-item">@Model.CreatedEvents[1].Competitions[j].SportType.Description</li>
                        <li class="list-group-item">Entry Capacity</li>
                        <li class="list-group-item">@Model.CreatedEvents[1].Competitions[j].EntryCapacity</li>
                        <li class="list-group-item">Gender Restriction</li>
                        @if (@Model.CreatedEvents[1].Competitions[j].GenderRestriction == 1)
                    {
                    <li class="list-group-item">Male</li>
                        }
                        else if (@Model.CreatedEvents[1].Competitions[j].GenderRestriction == 2)
                        {

                            <li class="list-group-item">Female</li>
                        }
                        else
                        {
                            <li class="list-group-item">Mixed</li>
                        }
                    </ul>
                </div>
                <div class="col-sm-4">
                    <ul class="list-group">
                        <li class="list-group-item">Division Type</li>
                        <li class="list-group-item">@Model.CreatedEvents[1].Competitions[j].DivisionType.DivisionName</li>
                        <li class="list-group-item">Division Description</li>
                        <li class="list-group-item">@Model.CreatedEvents[1].Competitions[j].DivisionType.DivisionDescription</li>
                        <li class="list-group-item">Team Minimum Number</li>
                        <li class="list-group-item">@Model.CreatedEvents[1].Competitions[j].TeamSizeMin</li>
                        <li class="list-group-item">Team Maximum Number</li>
                        <li class="list-group-item">@Model.CreatedEvents[1].Competitions[j].TeamSizeMax</li>
                        <li class="list-group-item">Minimum Age</li>
                        <li class="list-group-item">@Model.CreatedEvents[1].Competitions[j].MinimumAge</li>
                        <li class="list-group-item">Maximum Age</li>
                        <li class="list-group-item">@Model.CreatedEvents[1].Competitions[j].MaximumAge</li>


                    </ul>
                </div>
            </div>
        </div>
    }
}






