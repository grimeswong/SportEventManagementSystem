@model CreateEventViewModel

@{
    ViewData["Title"] = "Edit Event";
}

<div class="row body-content">
    <form  asp-controller="Event" asp-action="EditEvent" asp-route-returnurl="@ViewData["ReturnUrl"]" asp-route-eventID="@ViewData["eventID"]" method="post" id="EventForm">
        <input asp-for="CompetitionCount" type="hidden" value="@Model.Competitions.Count"/>
        <p><h2>1. Event Details</h2></p>
        <div class="row"> <!-- Event content row start -->
            <div class="col-md-8">
                <div class="row">
                    <div class="form-group col-md-6 col-sm-12">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Event Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <label asp-for="StartTime" class="control-label"></label>
                        <input asp-for="StartTime" class="form-control datetimepicker" placeholder="Date & time" value="@Model.StartTime"/>
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <label asp-for="EndTime" class="control-label"></label>
                        <input asp-for="EndTime" class="form-control datetimepicker" placeholder="Date & time" value="@Model.EndTime"/>
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="event-description" rows="5" placeholder="Description of Event"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <label asp-for="RegStartTime" class="control-label"></label>
                        <input asp-for="RegStartTime" class="form-control datetimepicker" placeholder="Date & time" value="@Model.RegStartTime"/>
                        <span asp-validation-for="RegStartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 col-sm-6">
                        <label asp-for="RegEndTime" class="control-label"></label>
                        <input asp-for="RegEndTime" class="form-control datetimepicker" placeholder="Date & time" value="@Model.RegEndTime" />
                        <span asp-validation-for="RegEndTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="OrganiserName" class="control-label"></label>
                        <input asp-for="OrganiserName" class="form-control" placeholder="Organiser Name" />
                        <span asp-validation-for="OrganiserName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="OrganiserClub" class="control-label"></label>
                        <input asp-for="OrganiserClub" class="form-control" placeholder="Organiser Club" />
                        <span asp-validation-for="OrganiserClub" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="IsPrivate" class="control-label"></label>
                        <input type="checkbox" asp-for="IsPrivate" class="form-control"/>
                        <span asp-validation-for="IsPrivate" class="text-danger"></span>
                    </div>
                </div>
            </div> <!-- end row col-md-8 -->
            <div class="col-md-4">
                <img class="create-img" src="~/images/banner1.jpg" alt="Image not available" />
                <p>Add a photo</p>
            </div>
        </div> <!-- End of Event Details part -->

        <p><h2>2. Event Location</h2></p>
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label asp-for="VenueName" class="control-label">Event Venue Name</label>
                        <input asp-for="VenueName" class="form-control" placeholder="Event Venue Name"/>
                        <span asp-validation-for="VenueName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="StreetAddress" class="control-label">Event Address</label>
                        <input asp-for="StreetAddress" class="form-control" placeholder="Event Address"/>
                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Suburb" class="control-label"></label>
                        <input asp-for="Suburb" class="form-control" placeholder="Suburb"/>
                        <span asp-validation-for="Suburb" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="PostCode" class="control-label"></label>
                        <input asp-for="PostCode" class="form-control" placeholder="Postcode"/>
                        <span asp-validation-for="PostCode" class="text-danger"></span>
                    </div>
                </div>

            </div>

            <div class="col-md-4">
                <img class="create-img" src="~/images/banner2.jpg" alt="Image not available" />
                <p>Goolge Map</p>
            </div>
        </div>  <!-- end of event location part -->
        <div class="separater-Line"></div>
        <h2 asp-for="Competitions"></h2>
        <span asp-validation-for="Competitions" class="text-danger"></span>

        <button class="btn btn-danger compbtn-bottom" id="compAdd" type="button">Add A Competition</button>


        <div class="row" id="compFormMain">
            @for (int c = 0; c < Model.Competitions.Count;c++)
            {
                <div class="col-md-8">
                    <h1 id='title_@c'> Competition @(c+ 1)</h1>
                    <div class="row">
                        <div class="form-group col-md-6 col-sm-12">
                            <label asp-for="@Model.Competitions[c].CompName" class="control-label"></label>
                            <input asp-for="@Model.Competitions[c].CompName" class="form-control" placeholder="Competition Name" />
                            <span asp-validation-for="@Model.Competitions[c].CompName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3 col-sm-6">
                            <label asp-for="@Model.Competitions[c].DivisionName" class="control-label"></label>
                            <input asp-for="@Model.Competitions[c].DivisionName" class="form-control" placeholder="Division Name" />
                            <span asp-validation-for="@Model.Competitions[c].DivisionName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3 col-sm-6">
                            <label asp-for="@Model.Competitions[c].DivisionDescription" class="control-label"></label>
                            <input asp-for="@Model.Competitions[c].DivisionDescription" class="form-control" placeholder="Division Description" />
                            <span asp-validation-for="@Model.Competitions[c].DivisionDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3 col-sm-6">
                            <label asp-for="@Model.Competitions[c].SportName" class="control-label"></label>
                            <input asp-for="@Model.Competitions[c].SportName" class="form-control" placeholder="Sport Name" />
                            <span asp-validation-for="@Model.Competitions[c].SportName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3 col-sm-6">
                            <label asp-for="@Model.Competitions[c].SportDescription" class="control-label"></label>
                            <input asp-for="@Model.Competitions[c].SportDescription" class="form-control" placeholder="Sport Description" />
                            <span asp-validation-for="@Model.Competitions[c].SportDescription" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6 col-sm-12">
                            <label asp-for="@Model.Competitions[c].Location" class="control-label"></label>
                            <input asp-for="@Model.Competitions[c].Location" class="form-control" placeholder="Competition Location" />
                            <span asp-validation-for="@Model.Competitions[c].Location" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3 col-sm-6">
                            <label asp-for="@Model.Competitions[c].CompStartTime" class="control-label"></label>
                            <input asp-for="@Model.Competitions[c].CompStartTime" class="form-control datetimepicker" placeholder="Date & Time" value="@Model.Competitions[c].CompStartTime"/>
                            <span asp-validation-for="@Model.Competitions[c].CompStartTime" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3 col-sm-6">
                            <label asp-for="@Model.Competitions[c].CompEndTime" class="control-label"></label>
                            <input asp-for="@Model.Competitions[c].CompEndTime" class="form-control datetimepicker" placeholder="Date & Time" value="@Model.Competitions[c].CompEndTime"/>
                            <span asp-validation-for="@Model.Competitions[c].CompEndTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-sm-4">
                            <label asp-for="@Model.Competitions[c].EntryCapacity" class="control-label"></label>
                            <input asp-for="@Model.Competitions[c].EntryCapacity" class="form-control" placeholder="Entry Capacity" />
                            <span asp-validation-for="@Model.Competitions[c].EntryCapacity" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label asp-for="@Model.Competitions[c].TeamSizeMin" class="control-label"></label>
                            <input asp-for="@Model.Competitions[c].TeamSizeMin" class="form-control" placeholder="Team Minimum No." />
                            <span asp-validation-for="@Model.Competitions[c].TeamSizeMin" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label asp-for="@Model.Competitions[c].TeamSizeMax" class="control-label"></label>
                            <input asp-for="@Model.Competitions[c].TeamSizeMax" class="form-control" placeholder="Team Maximum No." />
                            <span asp-validation-for="@Model.Competitions[c].TeamSizeMax" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4 col-sm-4">
                            <label asp-for="@Model.Competitions[c].MinimumAge" class="control-label">Minimum Age</label>
                            <input asp-for="@Model.Competitions[c].MinimumAge" class="form-control" placeholder="Minimum Age" />
                            <span asp-validation-for="@Model.Competitions[c].MinimumAge" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label asp-for="@Model.Competitions[c].MaximumAge" class="control-label">Maximum Age</label>
                            <input asp-for="@Model.Competitions[c].MaximumAge" class="form-control" placeholder="Maximum age" />
                            <span asp-validation-for="@Model.Competitions[c].MaximumAge" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4 col-sm-4">
                            <label asp-for="@Model.Competitions[c].GenderRestriction" class="control-label"></label>
                            <select asp-for="@Model.Competitions[c].GenderRestriction">
                                <option value=0 selected>Please select an option.</option>
                                <option value=1>Male</option>
                                <option value=2>Female</option>
                                <option value=3>Mixed</option>
                            </select>
                            <span asp-validation-for="@Model.Competitions[c].GenderRestriction" class="text-danger"></span>
                        </div>
                    </div>

                </div> <!-- end of left details column -->
                    <div class="col-md-4">
                        <img class="create-img" src="~/images/banner1.jpg" alt="Image not available" />
                        <p>Add a photo</p>
                    </div> <!-- end of right image column -->
                    <!-- Save Competition Buttons -->
                    <div class="col-md-12">
                        <button class="btn btn-default btn-lg" id='removeCompetitionBtn_@ViewData["compCount"]' type="button">Remove Competition</button>
                    </div> <!-- End of save cpmpetition buttons-->

                    <script>
                        $('.removeCompetitionBtn').on("click", function (e) {
                            var num = e.currentTarget.getAttribute("competitionId");
                            $('#compForm' + num).remove();
                            var newCompCount = parseInt($("#CompetitionCount").val()) - 1;
                            $("#CompetitionCount").val(newCompCount);
                        });
                    </script>

            }
        </div>
    <br />
        <!-- Confirm to create an event -->
        <div class="row">
            <div class="col-md-12">
                    <p>Warning: Editing event details will remove all participants from this event and notify them via email.</p>
                    <input type="submit" value="Confirm to edit event" class="btn btn-primary btn-lg" />
                    <button asp-action="Index" class="btn btn-default btn-lg">Cancel</button>  
            </div>
        </div>
        
        <br/><br/>

    </form> <!-- end of the event and competition form -->

</div> <!-- end row maincontent-->

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<!-- Datetime picker Script -->
<script type="text/javascript">
        $('.datetimepicker').datetimepicker({ sideBySide: true, locale: 'en-au' });
</script>

<script type="text/javascript">
    function reInitValidation() {
        var form = $("#EventForm")
            .removeData("validator") /* added by the raw jquery.validate plugin */
            .removeData("unobtrusiveValidation");  /* added by the jquery unobtrusive plugin*/

        $.validator.unobtrusive.parse(form);
    }

    function addCompetition() {
        var url = "/Event/NewCompetition/";
        $.ajax({
            url: url,
            cache: false,
            type: "POST",
            data: $("#EventForm").serialize(),
            success: function (data) {
                var compCount = parseInt($("#CompetitionCount").val());
                $("#CompetitionCount").val(compCount + 1);
                var compDiv = "<div id='compForm" + compCount + "' >" + data + " </div>";
                $('#compFormMain').append(compDiv);
            },
            error: function (reponse) {
                console.log(reponse);
            }
        });
    }
    $('#compAdd').on("click", function (e) {
        addCompetition();
    });
    
    $('#EventForm').submit(function () {
        //Re-initialise validation before submit to take into consideration dynamically generated competition forms
        reInitValidation();
        return true;
    });
</script>